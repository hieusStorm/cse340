<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
<form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name:</label>
    <input type="text" id="classification_name" name="classification_name" placeholder="Classification" value="<%= locals.classification_name %>" required>
    <input type="submit" class="button" value="Add Classification">
</form>