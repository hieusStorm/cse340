<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  <p>Confirm Delete - This is permanent and can't be undone</p>
  <form action="/inv/delete" method="post" id="deleteForm">
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" placeholder="" value="<%= locals.inv_make %>" required readonly>
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" placeholder="" value="<%= locals.inv_model %>" required readonly>
    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" placeholder="YYYY" pattern="\d{4,4}" value="<%= locals.inv_year %>" required readonly>
    <label for="inv_price">Price:</label>
    <input type="text" id="inv_price" name="inv_price" placeholder="999.99" value="<%= locals.inv_price %>" required readonly>
    <input type="submit" class="button" value="Delete Car">
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>