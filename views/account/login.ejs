<h1><%- title %></h1>
<%- messages() %>
<form id="loginForm" action="/account/login" method="post">
<label for="email">Email:</label>
<input type="email" id="email" placeholder="example@gmail.com" name="account_email" required>
<label for="password">Password:</label>
<span>Passwords have at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
<input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
<input type="submit" value="Login" class="button">
<p>No account? <a href="/account/signUp/">Sign-up</a></p>
</form>