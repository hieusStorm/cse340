<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>
<h2>Update Acount Information</h2>
<form action="/account/update/" method="post">
    <label id="account_firstname">First Name:</label>
    <input type="text" id="account_firstname" name="account_firstname" value="<%= account_firstname %>" required>
    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" required value="<%= account_lastname %>">
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required value="<%= account_email %>">
    <input type="hidden" id="account_id" name="account_id" value="<%= account_id %>">
    <input type="submit" class="button" value="Update Account">
</form>
<h2>Change password</h2>
<form action="/account/update/password/" method="post">
    <label for="account_password">Password:</label>
    <p>Entering a new password will change your current password.</p>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="The password requires at at least 12 characters and has at least 1 uppercase character, 1 number and 1 special character" value="">
    <input type="hidden" id="account_id" name="account_id" value="<%= account_id %>">
    <input type="submit" value="Change Password" class="button">
</form>